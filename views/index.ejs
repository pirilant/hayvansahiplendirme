<% layout("layout") %>

  
<div class="container">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img src="images/dd.jpg" alt="Los Angeles">
    </div>

    <div class="item">
      <img src="images/cat.jpg" alt="Chicago">
    </div>

    <div class="item">
      <img src="images/dog.jpg" alt="New York">
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
  <div class="row">
    <form action="/sahiplendir" method="post">
      <div class="form-group col-md-6">
        <label>Hayvansever</label>
        <select class="form-control" name="hs">
          <% hs.forEach( function(data) { %>
            <option value="<%= data._id %>"> <%= data.firstname %> <%= data.lastname %> </option>
          <% }) %>
        </select>
      </div>
      <div class="form-group col-md-6">
        <label>Hayvan</label>
       <select class="form-control" name="hy">
          <% hy.forEach( function(data) { %>
            <option value="<%= data._id %>"> <%= data.adi %> </option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-12">
        <button class="btn btn-success pull-right">SAHİPLENDİR</button>
      </div>
    </form>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <h3>Sahiplendirmeler</h3>
      <table class="table table-responsive table-bordered">
        <thead>
          <tr>
            <th>SAHİPLENEN</th>
            <th>HAYVAN</th>
          </tr>
        </thead>
        <tbody>
          <% sahip.forEach( function(data) { %>
            <tr>
              <td> <%= data.hsad %> </td>
              <td> <%= data.had %> </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>