<% layout("layout") %>

<div class="container">
	<div class="row">
		<div class="col-sm-3"></div>
		<div class="col-sm-6">
			<form action="/hayvansever/ekle" method="post">
				<div class="form-group col-md-6">
					<label>Hayvansever Adı</label>
					<input type="text" name="firstname" class="form-control" placeholder="Hayvansever Adı" required="">
				</div>
				<div class="form-group col-md-6">
					<label>Hayvansever Soyadı</label>
					<input type="text" name="lastname" class="form-control" placeholder="Hayvansever Soyadı" required="">
				</div>
				<div class="form-group col-md-6">
					<label>E-Mail</label>
					<input type="email" name="email" class="form-control" placeholder="E-Posta" required="">
				</div>
				<div class="form-group col-md-6">
					<label>Hayvansever Cinsiyet</label>
					<select class="form-control" name="gender" required="">
						<option>Erkek</option>
						<option>Kadın</option>
					</select>
				</div>
				<div class="form-group col-md-12">
					<button type="submit" class="btn btn-primary pull-right">EKLE</button>
				</div>
			</form>
		</div>
		<div class="col-sm-3"></div>
	</div>
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<table class="table table-responsive">
				<thead>
					<tr>
						<th>Ad Soyad</th>
						<th>E-Posta</th>
						<th>Cinsiyet</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% hayvansever.forEach( function(data) { %>
						<tr>
							<td> <%= data.firstname %> <%=  data.lastname %> </td>
							<td> <%= data.email %> </td>
							<td> <%= data.gender %> </td>
							<td> <a class="btn btn-danger btn-xs" href="/hayvanseversil/<%= data._id %>">SİL</a> </td>
						</tr>
					<%  }) %>
				</tbody>
			</table>
		</div>
		<div class="col-md-3"></div>
	</div>
</div>